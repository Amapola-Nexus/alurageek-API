{
    "functions": {
      "api/server.js": {
        "memory": 1024,
        "includeFiles": "db.json"
      }
    },
    "routes": [
      {
        "source": "/(.*)",
        "destination": "api/server.js",
        "methods": ["GET", "POST", "PUT", "DELETE"],
        "headers": {
            "Access-Control-Allow-Origin": "*"
        }
      }
    ]
  }
